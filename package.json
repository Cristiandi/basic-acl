{
  "name": "basic-acl-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "sudo docker-compose up -d test-db",
    "test:e2e": "NODE_ENV=test npx jest --config ./test/jest-e2e.json",
    "posttest:e2e": "sudo docker-compose stop test-db && sudo docker-compose rm -f test-db",
    "cz": "git-cz"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.4.2",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.2",
    "@nestjs/mapped-types": "0.1.0",
    "@nestjs/platform-express": "7.4.2",
    "@nestjs/platform-fastify": "7.4.2",
    "@nestjs/swagger": "4.6.0",
    "@nestjs/typeorm": "7.1.3",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "dotenv": "8.2.0",
    "faker": "5.1.0",
    "fastify-helmet": "5.0.1",
    "fastify-swagger": "3.3.0",
    "firebase-admin": "9.1.1",
    "path": "0.12.7",
    "pg": "8.3.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.2",
    "typeorm": "0.2.25",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.1",
    "@nestjs/testing": "7.4.2",
    "@types/express": "4.17.8",
    "@types/faker": "4.1.12",
    "@types/hapi__joi": "17.1.4",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.15",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "commitizen": "4.1.5",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.2.11",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ],
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
