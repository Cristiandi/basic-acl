  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/mapped-types": "0.0.5",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fastify": "^3.2.0",
